<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amalzoheir.musicalapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlbumActivity"
            android:label="Album"></activity>
        <activity
            android:name=".ArtistActivity"
            android:label="Artist"></activity>
        <activity
            android:name=".BuyListActivity"
            android:label="BuyList"></activity>
        <activity
            android:name=".FavouriteActivity"
            android:label="Favourite"></activity>
        <activity
            android:name=".PlayNowActivity"
            android:label="PlayNow"></activity>
    </application>

</manifest>